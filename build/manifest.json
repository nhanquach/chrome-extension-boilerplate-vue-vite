{
  "manifest_version": 3,
  "name": "Vue Chrome Extension",
  "version": "1.0.0",
  "description": "A simple Vue app as a Chrome extension",
  "action": {
    "default_popup": "index.html",
    "default_title": "Click to open"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_workder": "service-workder.js"
  },
  "permissions": [
    "sidePanel",
    "management"
  ]
}
